{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "noEmitOnError": true,
        "outDir": "dist_tsc/node",
        "inlineSourceMap": true,
        "declaration": true,
        "lib": ["es2015"],
        "types": ["node"]
    },
    "include": [
        "src/**/*.ts"
    ]
}
